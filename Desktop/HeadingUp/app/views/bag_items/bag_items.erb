<div class="bag_page">

  <header id="title">
    <h1> <%= @user.name %>'s Cart</h1>
  </header>

  <div class="bag_table">
    <table id="bag">
      <thead>
        <tr>
          <th class="qty">Quantity</th>
          <th class="img"> </th>
          <th class="item_name">Item</th>
          <th class="price">Price</th>
          <th class="delete">&nbsp;</th>
        </tr>
      </thead>

      <tbody>
        <div class="bag_items">
          <% @bag_items.each do |b| %>
            <% h = Head.find(b.head_id) %>
            <tr>

              <td> 
                <form action="/bag/edit" method="post">
                  <input type="hidden" name="bag[user_id]" value="<%= b.user_id %>">
                  <input type="hidden" name="bag[head_id]" value="<%= b.head_id %>">
                  <input type="hidden" name="bag[quantity]" value="<%= b.quantity + 1 %>">
                  <input id="increase" type="submit" class="bag_edit_btn" name="submit" value=" + ">
                </form>

                <%= b.quantity %>

                <form action="/bag/edit" method="post">
                  <input type="hidden" name="bag[user_id]" value="<%= b.user_id %>">
                  <input type="hidden" name="bag[head_id]" value="<%= b.head_id %>">
                  <input type="hidden" name="bag[quantity]" value="<%= b.quantity - 1 %>">
                  <input id="decrease" class="bag_edit_btn" type="submit" name="submit" value=" - ">
                </form>                
              </td>

              <td class="img"><img src="/img/<%= h.img %>"></td>

              <td><%= h.name %></td>

              <td>$<%= h.price %>.99</td>

              <td>
                <form id="delete" action="/delete" method="post">
                  <input type="hidden" name="bag[user_id]" value="<%= b.user_id %>">
                  <input type="hidden" name="bag[head_id]" value="<%= b.head_id %>">
                  <input type="hidden" name="bag[quantity]" value="<%= b.quantity - b.quantity %>">
                  <input id="decrease" type="submit" class="bag_edit_btn" name="submit" value=" x ">
                </form>
              </td>
            </tr>
          <% end %>
          
        </div>
      </tbody>
    </table>
    <hr>
    <div class="total">
      <% total = 0 %>
      <% @bag_items.each do |b| %>
        <% h = Head.find(b.head_id) %>
        <% total = total + (h.price * b.quantity) %>
      <% end %>
      <h2>Total: $<%= total %></h2>
    </div>
  </div>
</div>