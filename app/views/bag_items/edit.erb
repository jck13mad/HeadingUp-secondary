<div class="item_page">

    <h2 class="page_title">Editting Item Quantity</h2>
    <br>


    <h3 class="item_name"> <%= @bag_item.brand %> <%= @bag_item.name %></h3>
    <img class="item_image" src='/img/<%= @bag_item.img %>'>
    <form action="/bag/<%= @bag_item.id %>" method="POST">
        <input id="hidden" type="hidden" name="_method" value="PUT">
        <p class="edit_quantity">Quantity: <input type="number" name="head[quantity]" placeholder="<%= @bag_item.quantity %>" min="1" max="100"></p>
        <div class="quantity_submit">
            <input type="submit" class="bag_edit_btn" value="submit">
        </div>
    </form>
    <div class="desc_box"
        <p class="item description"><%= @bag_item.description %></p>
    </div>
</div>

